<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="What do you like most about the app?"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="#D8D4D4"
        android:layout_marginBottom="30dp"
        />
    <EditText
        android:id="@+id/suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Any suggestions for improvement?"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="#D8D4D4"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:id="@+id/features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" Any features you'd like to see added?"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="#D8D4D4"
        android:layout_marginBottom="30dp"
        />
    <EditText
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Any other comments or suggestions? "
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="#D8D4D4"
        android:layout_marginBottom="30dp"
        />
    <Button
        android:onClick="addUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="21sp"

        android:padding="10dp"
        android:textColorHint="#D8D4D4"
        android:layout_marginTop="40dp"
        />



</LinearLayout>